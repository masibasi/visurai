# Copy to .env and fill values
ENVIRONMENT=local
API_PREFIX=/api
CORS_ORIGINS=*

# LLM
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=

# Replicate / Flux
REPLICATE_API_TOKEN=
REPLICATE_MODEL=black-forest-labs/flux-1.1-pro
REPLICATE_TIMEOUT_SECONDS=300

# Performance
MAX_CONCURRENCY=4

